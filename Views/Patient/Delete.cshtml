@model HospitalCase.Models.PatientModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <h4>Patient</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientTelephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientTelephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientDocument)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientDocument)
        </dd>
